{
  "extends": "opentok",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true,
    "forOf": true,
    "generators": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": true,
    "templateStrings": true,
  },
  "rules": {
    "vars-on-top": 0,
    "no-var": 2,
    "prefer-const": 2,
    "prefer-arrow-callback": 2,
    "prefer-spread": 2,
    "object-shorthand": 2,
    "arrow-parens": [2, "as-needed"],
    "arrow-spacing": 2,
    "comma-dangle": [2, "always-multiline"]
  }
}
